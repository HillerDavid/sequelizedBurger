<div class="container">

    <h1>Bob's Burgers</h1>

    <h2>Burgers of the Day</h2>

    <div class="row">
        <div class="col-4">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>



    <h2>Burgers Eaten</h2>

    <div class="row">
        <div class="col-4">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>


    <h2>Add Burger of the Day</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="new-burger">Enter New Burger:</label>
            <input type="text" name="new-burger" id="new-burger">
        </div>

        <button type="submit" id="burger-submit">Add Burger</button>
    </form>
</div>